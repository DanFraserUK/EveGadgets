<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="ItemDetails">
 
   <resultMap id="ItemDetailsMap" type="ItemDetailsDomain" autoMapping="true">
		<id property="typeID" column="typeID"/>
		<id property="name" column="typeName"/>
		<id property="tier" column="marketGroupID"/>
    </resultMap>
    
    <select id="getItemDetailsList" resultMap="ItemDetailsMap">
        SELECT
			typeID,
			typeName,
			marketGroupID			
		FROM invTypes
		WHERE marketGroupID IN (1333,1334,1335,1336,1337);
    </select>
</mapper>